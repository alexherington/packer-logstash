{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "ap-southeast-2",
    "aws_source_ami": "ami-69631053",
    "aws_instance_type": "t2.small",
    "ami_name_prefix": "logstash",
    "logstash_version": "1.5.0-rc3",
    "consul_version": "1.5.0"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `ami_name_prefix`}}-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/default.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/java.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/consul.sh",
      "environment_vars": [
            "CONSUL_VERSION={{user `consul_version`}}"
        ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/logstash.sh",
      "environment_vars": [
            "LOGSTASH_VERSION={{user `logstash_version`}}"
        ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type":"vagrant",
      "output": "boxes/packer_{{.BuildName}}_{{.Provider}}.box",
      "vagrantfile_template": "templates/VagrantFile.template"
    }
  ]
}
